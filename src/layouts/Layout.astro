---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <link
      rel="icon"
      type="image/png"
      href={`${import.meta.env.BASE_URL}/favicon.png`}
    />
    <title>{title}</title>
    <meta
      name="description"
      content="Software Engineer based in Sydney Australia"
    />

    <!-- open graph tags -->
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <!-- <meta property="og:url" content="http://www.example.com/" /> -->
    <meta
      property="og:description"
      content="Software Engineer based in Sydney Australia"
    />
    <meta
      property="og:image"
      content={`${import.meta.env.BASE_URL}/og-image.png`}
    />

    <ViewTransitions />
  </head>
  <body>
    <main transition:animate="fade">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: sans-serif;
    color: rgb(56, 56, 56);
    background: rgb(241, 241, 241);
    /* background: linear-gradient(
			135deg,
			rgba(74, 32, 126, 0.2),
			rgba(70, 48, 99, 0.2) 30%,
			rgba(16, 62, 83, 0.2) 60%
		); */
  }
  body {
    min-height: 100vh;
    margin: 0;
    display: flex;
    justify-content: center;
    gap: 2rem;
  }
  main {
    width: 100vw;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  h1 {
    font-size: 3rem;
    font-weight: 300;
    line-height: 1;
    margin: 0;
  }
  h2 {
    font-size: 2rem;
    font-weight: 300;
    line-height: 1;
    margin: 0;
  }
  h3 {
    color: rgb(167, 167, 167);
    font-size: 1.5rem;
    font-weight: 300;
    line-height: 1;
    margin: 0;
  }
  p {
    font-size: 16px;
    font-weight: 300;
    line-height: 1.4;
    margin: 0;
  }
  a {
    font-weight: 300;
    text-decoration: none;
    color: black;
  }
  ul {
    padding: 0;
    margin: 0;
  }
  li {
    list-style: none;
    margin: 0;
    height: fit-content;
  }
  @keyframes fadeInFromBottom {
    0% {
      opacity: 0;
      transform: translateY(10%);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
