---
import CardList from '../components/CardList.astro';
import { getCollection } from 'astro:content';
import type { Project } from '../types/Project.type';

interface Props {
	title: string;
}

const projects: Project[] = await getCollection('projects');

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Software Engineer based in Sydney Australia" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<aside>
			<CardList projects={projects} />
		</aside>
		<main>
			<slot/>
		</main>
	</body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: sans-serif;
		background: #ffffff;
	}
	body {
		height: 100vh;
		margin: 0;
		font-size: 20px;
		line-height: 1.6;
		display: flex; 
		flex-direction: row; 
		justify-content: space-between; 
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	h1 {
		font-size: 3rem;
		font-weight: 300;
		line-height: 1;
		margin: 0;
	}
	h3 {
		font-weight: 300;
		margin: 0;
	}
	p {
		font-size: 14px;
		font-weight: 300;
		line-height: 1.4;
		margin: 0;
	}
</style>
