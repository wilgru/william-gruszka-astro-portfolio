---
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Software Engineer based in Sydney Australia" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<main transition:animate="fade">
			<slot/>
		</main>
	</body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: sans-serif;
		color: rgb(56, 56, 56);
		background: rgb(241, 241, 241);
		/* background: linear-gradient(
			135deg,
			rgba(74, 32, 126, 0.2),
			rgba(70, 48, 99, 0.2) 30%,
			rgba(16, 62, 83, 0.2) 60%
		); */
	}
	body {
		min-height: 100vh;
		margin: 0;
		display: flex; 
		justify-content: center; 
		gap: 2rem;
	}
	main {
		width: 100vw;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	h1 {
		font-size: 3rem;
		font-weight: 300;
		line-height: 1;
		margin: 0;
	}
	h3 {
		font-weight: 300;
		margin: 0;
	}
	p {
		font-size: 16px;
		font-weight: 300;
		line-height: 1.4;
		margin: 0;
	}
	a {
		font-weight: 300;
		text-decoration: none;
		color: black;
	}
	ul {
		padding: 0;
		margin: 0;
	}
	li {
		list-style: none;
		margin: 0;
		height: fit-content;
	}
</style>
