---
interface Props {
  name: string;
  backgroundColour?: string;
  textColour?: string;
}

const { name, backgroundColour, textColour } = Astro.props;
---

<div
  class="tag-pill"
  style={`background-color: ${backgroundColour ?? "snow"}; color: ${textColour ?? "#535353"}`}
>
  <p>{name}</p>
</div>

<style>
  .tag-pill {
    border-radius: 100px;
    padding: 2px 4px;
    width: fit-content;
    text-decoration: none;
  }
  .tag-pill > p {
    font-size: 14px;
    margin: 0 6px;
    font-weight: 500;
  }
</style>
