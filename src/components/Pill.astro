---
import type { CollectionEntry } from 'astro:content';

interface Props {
  name: string
  background: string
  border: string
}

const { name, background, border } = Astro.props;
---

<div class="tag-pill" style={`background-color: ${background}; border-color: ${border}; color: ${border}`}>
	<p>{name}</p>
</div>

<style>
	.tag-pill {
    border: 1px solid black;
    border-radius: 100px;
    width: fit-content;
    text-decoration: none;
  }
  .tag-pill > p {
    font-size: 14px;
    margin: 0 6px;
  }
</style>
