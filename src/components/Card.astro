<style>
  .card {
    transition: opacity 0.3s;
    flex: 1;
    background-color: snow;
    padding: 1.5rem;
    border-radius: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
  }
  .preview-image {
    display: flex;
    align-items: center;
    width: 90%;
  }
  .no-preview-image {
    height: fit-content;
    color: rgb(241, 241, 241);
  }
  .details {
    min-width: 300px;
    display: flex;
    flex-direction: column;
    justify-content: start;
    gap: 1rem;
  }
  .details header {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
    gap: 1rem;
  }
  .info-pills {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  .description {
    border-top: solid 2px rgb(241, 241, 241);
    padding-top: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .description ul {
    display: flex;
    flex-direction: row;
    gap: 0.5rem;
  }
  @media screen and (max-width: 844px) {
    .card {
      flex-direction: column;
    }
    .details {
      min-width: 100%;
      flex-direction: column;
      gap: 1rem;
    }
    .preview-image {
      width: 75%;
      height: 100%;
    }
  }
</style>
