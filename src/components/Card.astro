---
interface Props {
	title: string;
	href: string;
}

const { href, title } = Astro.props;
---

<li class="project-list-item">
	<a href={href} class="project-list-item-container">
		<img class="project-list-item-card" />

		<div class="project-list-item-info no-opacity">
			<p>{title}</p>
		</div>
	</a>
</li>

<script>
  const projectItem = document.querySelector('a.project-list-item-container');

	if (projectItem) {
		projectItem.addEventListener("mouseover", () => {
			projectItem.children[1].classList.remove('no-opacity')
		});

		projectItem.addEventListener('mouseleave', () => {
			projectItem.children[1].classList.add('no-opacity')
		});
	}
</script>

<style>
	.project-list-item {
		list-style: none;
	}
	.project-list-item-container {
		flex-shrink: 0;
		display: flex;
		gap: 1rem;
		padding: 1px;
		text-decoration: none;
	}
	.project-list-item-card {
		display: flex;
		padding: 1px;
		background-color: #2f2f2f;
		background-image: none;
		background-size: 400%;
		/* border-radius: 7px; */
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(144, 132, 132, 0.1);
		width: 25rem;
		height: 15rem;
		filter: grayscale();
	}
	.project-list-item-info {
		width: 10rem;
	}
	.project-list-item-info > p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: black;
		line-height: 1.4;
	}
	.no-opacity {
		opacity: 0;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
		filter: none;
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
