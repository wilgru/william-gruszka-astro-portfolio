---
import type { CollectionEntry } from 'astro:content';

interface Props {
	tag: CollectionEntry<'tags'>;
}

const { tag } = Astro.props;
---

<div class="tag-pill" style={`background-color: ${tag.data.colour}`}>
	<p>{tag.data.name}</p>
</div>

<style>
	.tag-pill {
    border: 1px solid black;
    border-radius: 100px;
    width: fit-content;
    text-decoration: none;
  }
  .tag-pill > p {
    font-size: 14px;
    margin: 0 6px;
  }
</style>
