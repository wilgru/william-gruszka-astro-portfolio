---
import Layout from '../layouts/Layout.astro';
import LinkIcon from '../components/LinkIcon.astro';
import CardList from '../components/CardList.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

const projects: CollectionEntry<'projects'>[] = await getCollection('projects');
const sortedProjects: CollectionEntry<'projects'>[] = projects.sort((a, b) => a.data.year < b.data.year ? 1 : -1)
---

<Layout title="William Gruszka">
	<section class="homepage-content">
		<header>
			<h1>William Gruszka</h1>
			<summary>
				<h3>Software Engineer</h3>
				<LinkIcon href={'https://github.com/wilgru'} iconName={"github-logo"} alt="Github icon" />
				<LinkIcon href={'https://www.linkedin.com/in/william-gruszka-a03373227/'} iconName={"linkedin-logo"} alt="linkedIn icon" />
				<LinkIcon href={'mailto:william.gruszka@icloud.com'} iconName={"envelope"} alt="email icon" />
			</summary>
		</header>

		<p>
			Full-stack software engineer with experience in agile first development, and a keen interest in industry focused web solutions and progressive web apps. I have experience with reactive web development especially using React and Typescript, and have been exposed to modern industry tools and paradigms including microservice architecture, AWS and goofing off.
		</p>

		<CardList projects={sortedProjects} transition:persist/>
	</section>
</Layout>

<style>
	.homepage-content {
		display: flex; 
		flex-direction: column; 
		gap: 1rem; 
		padding: 1rem
	}
	.homepage-content summary {
		display: flex; 
		flex-direction: row; 
		align-items: center;
		gap: 0.5rem; 
	}
</style>
